{
  "name": "light-zai",
  "version": "4.0.0",
  "description": "올인원 코딩 챗봇 CLI - 경량 AI 어시스턴트 (ARM7L/x86_64/aarch64, 무의존성)",
  "main": "index.js",
  "bin": {
    "light-zai": "./index.js",
    "lz": "./index.js"
  },
  "scripts": {
    "start": "node index.js",
    "start:tools": "LZAI_TOOLS=1 node index.js",
    "start:full": "LZAI_TOOLS=1 LZAI_THINK=1 node index.js",
    "start:debug": "LZAI_DEBUG=1 LZAI_TOOLS=1 node index.js",
    "doctor": "node index.js --doctor"
  },
  "keywords": [
    "chatbot", "cli",
    "ai", "coding-assistant", "tool-calling", "arm7l",
    "streaming", "web-search", "image-generation", "video-generation",
    "ocr", "embeddings", "speech-recognition", "zero-dependency"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0"
  }
}
